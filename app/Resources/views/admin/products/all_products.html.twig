{% extends 'base.html.twig' %}

{% block body %}
    {% if products|length > 0 %}
    <table class="table table-responsive table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Initial Cash</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Roles</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.initialCash }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.roles|join(", ") }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <h3>No products!</h3>
    {% endif %}
{% endblock %}