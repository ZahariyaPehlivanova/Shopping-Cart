<ul class="list-group" style="width: 200px">
    <li class="list-group-item"><h4>Categories</h4></li>
    {% if categories|length > 0 %}
        {% for category in categories %}
         <a href="{{ path("products_by_category", {"id": category.id}) }}">
            <li class="list-group-item" id="category">
                <span class="badge">{{ category.activeProducts|length }}</span>
                {{ category.name }}
            </li>
         </a>
        {% endfor %}
    {% else %}
        <li class="text-muted">No categories</li>
    {% endif %}
</ul>